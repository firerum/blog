<!DOCTYPE html>
<html lang="en">
   <%- include("./partials/head.ejs") %> <!-- Head file-->
   <body>
      <header class="banner">
         <%- include("./partials/nav.ejs") %> <!-- navigation file -->
      </header>
      <div class="blog">
         <% if(blogs.length > 0) { %>
            <% blogs.forEach(blog => { %> 
         <a href="/blogs/<%=blog.id %>" class="content-wrapper">
            <div class="content">
               <p><span class="heading">title:</span> <span><%= blog.title %></span></p>
               <p><span class="heading">description:</span> <span><%= blog.snippet %>...</span></p>
               <p><span class="heading">author:</span> <span><%= blog.author.firstname %></span></p>
               <p class="heading"><%= blog.createdAt.toLocaleDateString() %></p>
            </div>
         </a>
         <% }) %>
         <% } else { %>
               <p>There are no blogs to display</p>
         <% } %>
      </div>
      <%- include("./partials/footer.ejs") %> <!-- footer file -->
   </body>
</html>